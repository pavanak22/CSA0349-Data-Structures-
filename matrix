#include<stdio.h>
int main()
{
	int a[5][5],b[5][5],c[5][5],i,j,m,n;
	printf("how many rows&columns");
	scanf("%d%d",&m,&n);
	printf("enter the first matrix");
	for(i=0;i<m;++j)
	for(i=0;j<n;++j)
	scanf("%d",&a[i][j]);
	printf("enter the second matrix");
	for(i=0;i<m;++j)
	for(i=0;i<n;++j)
	scanf("%d",&b[i][j]);
	printf("matrix after addition");
	for(i=0;i<m;++i)
	{
		for(j=0;j<n;++j)
		{
			c[i][j]=a[i][j]+b[i][j];
			printf("%d",c[i][j]);
			printf("/n");
		}
	}
}
